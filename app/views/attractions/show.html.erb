<% if flash[:notice] %>
   <div class="notice" style="color: green"><%= flash[:notice] %></div>
 <% end %>
 <br>

 ATTRACTION SHOW PAGE
<br>
<br>
<b><%= @attraction.name %></b>
<br>
Minimum Height: <%= @attraction.min_height %><br>
Nausea Rating: <%= @attraction.nausea_rating %>/5<br>
Happiness Rating: <%= @attraction.happiness_rating %>/5<br>
